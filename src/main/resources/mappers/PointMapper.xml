<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.novelidea.gumeonggage.repository.PointMapper">
    <resultMap id="PointResultMap" type="com.novelidea.gumeonggage.entity.user.UserPoint">
        <result property="phoneNumber" column="phone_number" />
        <result property="point" column="point" />
    </resultMap>

    <select id="getPoint" resultMap="PointResultMap">
        select
            ut.phone_number,
            sum(current_point) as point
        from
            user_tb ut
            left outer join point_tb pt on(pt.user_id = ut.user_id)
        where
            ut.phone_number = #{number}
    </select>
</mapper>