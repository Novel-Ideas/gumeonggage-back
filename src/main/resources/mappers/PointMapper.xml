<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.novelidea.gumeonggage.repository.PointMapper">
    <resultMap id="UserResultMap" type="com.novelidea.gumeonggage.entity.user.User">
        <id property="userId" column="user_id" />
        <result property="phoneNumber" column="phone_number" />
        <collection property="points" javaType="list" resultMap="PointResultMap" />
    </resultMap>
    <resultMap id="PointResultMap" type="com.novelidea.gumeonggage.entity.user.Point">
        <id property="pointId" column="point_id"/>
        <result property="userId" column="user_id"/>
        <result property="currentPoint" column="current_point"/>
        <result property="orderListId" column="order_list_id"/>
    </resultMap>

    <select id="getPoint" resultType="int">
        select
            sum(current_point) as point
        from
            user_tb ut
            left outer join point_tb pt on(pt.user_id = ut.user_id)
        where
            ut.phone_number = #{phoneNumber}
    </select>

    <select id="findUser" resultMap="UserResultMap">
        select
            ut.user_id,
            ut.phone_number,
            pt.current_point,
            pt.order_list_id
        from
            user_tb ut
            left outer join point_tb pt on(pt.user_id = ut.user_id)
        where
            ut.phone_number = #{phoneNumber}
    </select>

    <insert id="useOrSavePoint">
        insert into
            point_tb
        values(0, #{userId}, #{currentPoint}, #{orderListId})
    </insert>
</mapper>