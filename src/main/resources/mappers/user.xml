<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.novelidea.gumeonggage.repository.UserMapper">

        <resultMap id="saveUser" type="com.novelidea.gumeonggage.entity.User">
            <id property="userId" column="user_id" />
            <result property="phoneNumber" column="phone_number" />
            <result property="createDate" column="create_date" />
            <result property="updateDate" column="update_date" />
        </resultMap>

        <insert id="saveUser"
                parameterType="com.novelidea.gumeonggage.entity.User"
                keyProperty="userId"
                useGeneratedKeys="true"
        >
            insert into user_tb
            values(0, #{phoneNumber}, now(), now())
        </insert>
    </mapper>


