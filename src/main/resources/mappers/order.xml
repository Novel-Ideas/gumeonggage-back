<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.novelidea.gumeonggage.repository.OrderMapper">

    <resultMap id="OrderResultMap" type="com.novelidea.gumeonggage.entity.Order">
        <id property="orderId" column="order_id"/>
        <result property="orderListId" column="oder_list_id"/>
        <result property="menuId" column="menu_id"/>
        <result property="menuCount" column="menu_count" />
        <association property="menu" resultMap="MenuResultMap" />
    </resultMap>

    <resultMap id="MenuResultMap" type="com.novelidea.gumeonggage.entity.Menu">
        <id property="menuId" column="menu_id" />
        <result property="menuName" column="menu_name" />
    </resultMap>
<!---->

    <insert id="addOrderList"
            useGeneratedKeys="true"
            keyProperty="orderListId"
            parameterType="com.novelidea.gumeonggage.entity.OrderList">
        insert into order_list_tb
        values(
        0,
        1,
        now(),
        now()
        )
    </insert>

    <insert id="addOrders" parameterType="List" >
        insert into
        order_tb
        values
        <foreach collection="orders" item="order" separator="," >
            (0, #{order.orderListId}, #{order.menuId}, #{order.menuCount})
        </foreach>
    </insert>

    <update id="completeMenuByOrderListId" parameterType="com.novelidea.gumeonggage.entity.OrderList">
        update
        order_list_tb
        set
        order_ok = 2

        where
        order_list_id = #{orderListId}
    </update>

    <select id="getRanking" resultMap="OrderResultMap">
        select
            ot.menu_id,
            mt.menu_name
        from
            order_tb ot
            left outer join menu_tb mt on(mt.menu_id = ot.menu_id)
        order by
            menu_count
        limit 3;
    </select>

</mapper>